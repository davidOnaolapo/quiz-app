  </head>

  <body>
    <!-- Top nav bar (fixed) -->
    <nav>
      <span>QUIZ WIZ</span>
      <div class="create-quiz">
        <button class="button" id="create-button">Create your own QUIZ</button>
      </div>
    </nav>
    <!-- Header with logo/avatar  -->
    <header class="main-header">
      <div class="main-image">
        <img src="https://images.pexels.com/photos/6266316/pexels-photo-6266316.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260">
    </div>
    <br>
    <div class="welcome-message">
        <h2>Welcome to</h2>
        <h2>QUIZ WIZ</h2>
    </div>
    </header>
   <!-- Page-specific (main) content here -->
   <main>
     <h3>Copy the link to share your private QUIZ</h3>
     <form class="private-link">
       <input type="text" name="private-link" value="http://localhost:8080/private">
     </form>

     <!-- Create quiz form (normally hidden) -->
    <section class="new-quiz">
      <h3>Make your own public or private QUIZ</h3>
      <form class="create-form">
        <div class="error">
          <p class="error-message">error</p>
        </div>
        <label for="title">Title: </label>
        <input type="text" name="quiz-title">
        <label for="category">Category: </label>
        <input type="text" name="quiz-category">
        <br>
        <label for="question">Question: </label>
        <input type="text" name="quiz-question">
        <label for="answer">Answer: </label>
        <input type="text" name="answer">
        <br>
        <label for="question">Question: </label>
        <input type="text" name="quiz-question">
        <label for="answer">Answer: </label>
        <input type="text" name="answer">
        <br>
        <button class="button" type="submit">Submit</button>
      </form>
    </section>
    <!-- Latest quizzes appended here  -->
    <section id="private-quizzes-container">
      <article class="quiz">
        <header class="card-title">
          <p>Title</p>
          <p>Category</p>
        </header>
        <div class="quiz-form">
          <form>
            <ol class="quiz-questions">
              <li>
                <label for="quiz-question"> Question </label>
                <input type="text" name="user-answer">
              </li>
            </ol>
            <br>
            <button class="button" type="submit">Submit</button>
          </form>
        </div>
        </article>
    </section>
  </main>
</body>
</html>
